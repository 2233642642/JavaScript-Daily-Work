<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JavaScript Assignment Operators</title>
</head>
<body>
    <h1>JavaScript Assignment Operators</h1>
    <div id="output"></div>
    
    <script src="script.js"></script>
</body>
</html>




// Initialize variables
let x = 10;
let y = 5;

// Function to display the results
function displayResult(message) {
    const outputDiv = document.getElementById('output');
    outputDiv.innerHTML += `<p>${message}</p>`;
}

// Assignment operator (=)
x = y;
displayResult(`After x = y, x: ${x}`); // x = 5

// Reset x to 10
x = 10;

// Addition assignment operator (+=)
x += y;
displayResult(`After x += y, x: ${x}`); // x = 15

// Reset x to 10
x = 10;

// Subtraction assignment operator (-=)
x -= y;
displayResult(`After x -= y, x: ${x}`); // x = 5

// Reset x to 10
x = 10;

// Multiplication assignment operator (*=)
x *= y;
displayResult(`After x *= y, x: ${x}`); // x = 50

// Reset x to 10
x = 10;

// Division assignment operator (/=)
x /= y;
displayResult(`After x /= y, x: ${x}`); // x = 2

// Reset x to 10
x = 10;

// Modulus assignment operator (%=)
x %= y;
displayResult(`After x %= y, x: ${x}`); // x = 0

// Reset x to 10
x = 10;

// Exponentiation assignment operator (**=)
x **= y;
displayResult(`After x **= y, x: ${x}`); // x = 100000
